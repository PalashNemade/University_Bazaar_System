<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cse6324.university_bazaar_system.ClubListActivity">

    <include layout="@layout/admob_layout"></include>

    <Button
        android:id="@+id/btnCreateNewClub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:text="Create Club"
        android:textColor="@color/white"
        android:background="@drawable/post_message_background"/>

    <Button
        android:id="@+id/btnManageClubs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/btnCreateNewClub"
        android:textColor="@color/white"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:text="Manage Clubs"
        android:background="@drawable/post_message_background"/>

    <TextView
        android:id="@+id/tvClubList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnManageClubs"
        android:text="Club List"
        android:textSize="25dp"
        android:layout_marginTop="@dimen/activity_vertical_margin"/>

    <LinearLayout
        android:id="@+id/llClubList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/tvClubList"
        android:layout_marginTop="@dimen/activity_vertical_margin">
    </LinearLayout>

</RelativeLayout>
